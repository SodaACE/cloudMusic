.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  height: 60rpx;
  width: 60rpx;
}
.videoContainer .header .search {
  border: 1rpx solid #eee;
  margin: 0 20rpx;
  flex: 1;
  color: #d43c33;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navContent {
  box-sizing: border-box;
  height: 60rpx;
}
.active {
  border-bottom: 2rpx solid #d43c33;
}
.videoScroll {
  margin-top: 10rpx;
  height: calc(100vh - 152rpx);
}
.videoItem {
  padding: 0 3%;
}
.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
.iconfont {
  font-size: 36rpx;
}