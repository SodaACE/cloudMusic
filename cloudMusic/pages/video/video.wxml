<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header" bindtap="toSearch">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">搜索</view>
    <image src="/static/images/logo.png"></image>
  </view>
      <!-- 导航区域 -->
      <scroll-view 
      class="navScroll"
      scroll-x
      enable-flex
      scroll-into-view="{{'scroll' + navId}}"
      scroll-with-animation
      >
    <view id="{{'scroll' + item.id}}" class="navItem" wx:for="{{videoGroupList}}" wx:key="id" bindtap="changeNav">
      <view class="navContent {{navId == item.id ? 'active':''}}" 
      id="{{item.id}}" 
      >{{item.name}}</view>
      </view>
    </scroll-view>

    <!-- 视频区域 -->
    <scroll-view 
      scroll-y
      class="videoScroll"
      bindrefresherrefresh="handleRefresh"
      refresher-enabled
      refresher-triggered="{{isRefresh}}"
     >
      <view  class="videoItem" wx:for="{{videoList}}" wx:key="id">
        <video
         src="{{item.data.urlInfo.url}}"
         bindplay="handlePlay"
         id="{{item.data.vid}}"
         class="common"
         wx:if="{{videoId == item.data.vid}}"
         autoplay
         object-fit="fill"
         bindtimeupdate="handleUpdate"
         bindended="handleEnded"
         ></video>

         <!-- 用图片来替代视频做性能优化 -->
         <image wx:else bindtap="handlePlay" class="common" src="{{item.data.coverUrl}}" id="{{item.data.vid}}">
         </image>

          <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-aixin"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-w_taolun"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-androidgengduo"></text>
          </button>
        </view>
      </view>
      </view>
           
    </scroll-view>
    
</view>