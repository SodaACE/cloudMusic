/* 轮播图样式 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

/* 五个导航模块的样式 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navContainer .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 50rpx;
  text-align: center;
  margin: 20rpx 0;
  border-radius: 50%;
  color: #fff;
  background-color: rgb(240,19,19);
}
.navContainer text {
  font-size: 26rpx;
}

/* 推荐歌曲的样式 */
.recommendContainer {
  padding: 20rpx;
}

/* 内容区样式 */
.recommendScroll {
  display: flex;
  margin-top: 31rpx;
  height: 300rpx;
}
.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜区域样式 */
.topList {
  padding: 20rpx;
}
.topListSwiper {
  height: 450rpx;
  background-color: #fdfdfd;
}
.musicItem {
  display: flex;
}
.swiperItem .title {
  font-size: 32rpx;
  line-height: 80rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.count{
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.musicName {
  height: 128rpx;
  line-height: 98rpx;
  max-width: 400rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}