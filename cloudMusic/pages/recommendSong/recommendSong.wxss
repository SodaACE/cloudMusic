.recommendSong .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSong .header image{
  width: 100%;
  height: 100%;
}
.recommendSong .header .date {
  position: absolute;
  top: 55%;
  left: 53%;
  transform: translate(-50%,-50%);
  color: #fff;
  font-weight: 700;
}
.recommendSong .header .date .day {
  font-size: 40rpx;
}
.listContainer {
  position: relative;
  top: -20rpx;
  border-radius: 30rpx;
  background-color: #fff;
  padding: 0 20rpx;
}
.listHeader .changeMore {
  float: right;
}
.listHeader text {
  height: 80rpx;
  line-height: 128rpx;
}
.scrollItem {
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
}
.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  max-width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 24rpx;
}
.scrollItem .iconfont {
  position: absolute;
  right: -7px;
  color: #bbb;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}